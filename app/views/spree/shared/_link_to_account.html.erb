<% if try_spree_current_user %>
  <%= link_to "내 정보", spree.account_path, class: 'dropdown-item' if spree.respond_to?(:account_path) %>
  <%= link_to "로그아웃", spree_logout_path, class: 'dropdown-item', method: :get if defined?(spree_logout_path) %>
<% else %>
  <%= link_to "로그인", spree_login_path, class: 'dropdown-item' if defined?(spree_login_path) %>
  <%= link_to "가입하기", spree_signup_path, class: 'dropdown-item' if defined?(spree_signup_path) %>
<% end %>
