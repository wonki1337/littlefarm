<div class="form-group mb-5">
  <%= f.email_field :email, class: 'spree-flat-input', placeholder: '이메일을 입력하세요' %>
</div>

<div class="form-group mb-4">
  <%= f.password_field :password, class: 'spree-flat-input', placeholder: '비밀번호를 입력하세요' %>
</div>

<div class="form-group mb-5">
  <%= f.password_field :password_confirmation, class: 'spree-flat-input', placeholder: '비밀번호를 재입력해주세요' %>
</div>
<div data-hook="signup_below_password_fields"></div>
